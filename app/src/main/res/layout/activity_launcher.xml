<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.Launcher"
    android:background="@color/launcherBg"
    android:orientation="vertical"
    android:weightSum="3">

    <Button
        android:id="@+id/tramite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="50dp"
        android:textColor="@color/launcherBg"
        android:text="Tramite"
        android:fontFamily="sans-serif-condensed-medium"
        android:textSize="25dp"
        android:background="@drawable/button"
        android:drawableTop="@drawable/pen2"
        />
    <Button

        android:id="@+id/universidad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="50dp"
        android:textColor="@color/launcherBg"
        android:text="Universidad"
        android:fontFamily="sans-serif-condensed-medium"
        android:textSize="25dp"
        android:layout_below="@id/tramite"
        android:background="@drawable/button2"
        android:drawableTop="@drawable/book2"

        />
    <Button
        android:id="@+id/sabias"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:layout_marginHorizontal="50dp"
        android:textColor="@color/launcherBg"
        android:text="Sabias que?"
        android:fontFamily="sans-serif-condensed-medium"
        android:textSize="25dp"
        android:layout_below="@id/universidad"
        android:background="@drawable/button3"
        android:drawableTop="@drawable/question"

        />




</LinearLayout>